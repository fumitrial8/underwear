.index_page.row
  - @brands.each do |brand|
    .brand_container.col.s12.m12.l12
      = link_to brand_path(brand) do
        = brand.name
        - if brand.twitter  
          -# = image_tag @client.user_search(brand.twitter.sub("https://twitter.com/", ""), count: 5).first.profile_banner_uri_https.to_s
          = image_tag @client&.user_timeline(brand.twitter&.sub("https://twitter.com/", ""))&.first&.user&.profile_banner_uri_https&.to_s
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js", :type => "text/javascript"}
= javascript_include_tag 'brands/index.js'
